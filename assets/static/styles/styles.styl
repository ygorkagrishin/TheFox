@import 'base/_typography.styl'
@import 'base/_reset.styl'

@import '_var.styl'
@import '_mixin.styl'

@import 'layout/_layout.styl'

.hero
    position relative
    z-index $z-index9
    height 100vh
    background-color blueColor

.hero__slider
    overflow hidden

.hero__wrap
    display flex

.hero__slide
    height 100vh
    flex 1 0 100%
    text-align center
    .container
        display flex
        height inherit
        align-items center
        justify-content center
    h3
        margin 24px 0
        font 36px / 1 mainTitleFont
        letter-spacing 7.6px
        text-transform uppercase
        color whiteColor

.hero__bottom
    position absolute
    left 0
    bottom 0
    z-index $z-index8
    width 100%
    padding 45px 0
    background-color rgba(blackColor,.5)
    .container
        display flex
        align-items center
        justify-content space-between
    .nb
        font-size 19px
        line-height 1
        letter-spacing .2px
        text-transform uppercase
        color whiteColor
    .hero__btn
        color whiteColor
        border-color whiteColor

.intro__list
    display flex
    justify-content space-between
    padding 152px 0 144px 0

.intro__item
    padding 0 30px
    flex 1
    text-align center
    &:not(:last-child)
        margin-right 30px
    h3
        font 15px / 30px baseTitleFont
        text-transform uppercase
        color blackColor

.intro__pic
    margin-bottom 40px

.promo__inner
    padding 254px 0 785px 0

.promo__row
    display flex
    & > .promo__col
        flex-basis 50%
        padding-left 175px

.promo__title
    font 90px / 84px baseTitleFont2
    letter-spacing 9px
    color blackColor
    span 
        display inline-block
        margin-left 95px
        font 90px / 1 mainTitleFont
        color darkColor
    & + p
        margin-top 16px
        letter-spacing 2px
        text-align right
        color blackColor

.promo__graphic
    position absolute
    z-index -1
    top 0
    &-1
        top 7%
        left 5%
        width 30%
    &-2
        right 5.5%
        width 54%

.brand
    padding 158px 0 143px 0

.brand__figure
    margin-bottom 102px
    text-align center

.brand__rows
    margin-bottom 100px

.brand__rows
    & > .brand__row
        display flex
        justify-content center
        &:not(:last-child)
            margin-bottom 30px
        & > .brand__col
            flex 1 0 271px
            &:not(:last-child)
                margin-right 30px

.brand__col
    flex 1 0 271px
    &:not(:last-child)
        margin-right 30px

.brand__brand
    position relative
    z-index $z-index9
    padding-top 160px

.brand__link,
.brand__img
    position absolute
    top 0 
    left 0
    width 100%
    height 100%

.brand__link
    bg = #f3f3f4

    z-index $z-index7
    display block
    background-color bg
    border 1px solid bg

.brand__img
    z-index $z-index8
    object-fit none

.brand__link:hover
    background-color whiteColor
    border 1px solid blackColor 

.summ
    background greyColor url('img/content/summer/photo-1444401045234-4a2ab1f645c01.png') no-repeat center / cover

.summ__inner
    padding 362px 0 386px 0

.summ__header
    color whiteColor
    img 
        margin 33px 0 26px 0

.summ__row
    display flex
    justify-content flex-end

.summ__col
    padding-left 12%
    flex-basis 50%

.summ__text
    padding-right 8%
    color whiteColor

.news__inner
    padding 136px 0 152px 0

.news
    text-align center

.news__header
    max-width 680px
    margin 0 auto
    padding-bottom 100px
    color blackColor
    img 
        margin 32px 0 24px 0
        
.news__rows
    margin-bottom 68px
    & > .news__row
        display flex
        justify-content center
        &:not(:last-child)
            margin-bottom 65px
        & > .news__col
            flex 1 0 271px
            &:not(:last-child)
                margin-right 30px

.news__article
    cursor pointer
    span 
        font-size 12px
        line-height 14px
        text-transform uppercase
    h3
        margin 8px 0 16px 0
        font 18px / 31px baseTitleFont2
        color blackColor 

.news__pic
    position relative
    z-index $z-index9
    margin-bottom 33px
    padding-top 300px
    & > img 
        position absolute
        top 0 
        left 0
        width 100%
        height 100%
        object-fit cover

.news__hover
    position absolute
    top 0
    left 0
    z-index $z-index7
    display none
    width 100%
    height 100%
    justify-content center
    align-items center
    background-color rgba(blueColor,.9)
    &::after
        position absolute
        top 2.5%
        left 2.5%
        z-index -1
        width 95%
        height 95%
        border 5px solid whiteColor
        content ''
    a
        font 14px / 32px baseFont2
        text-transform uppercase
        color rgba(whiteColor,.9)
        &:hover
            color whiteColor

.news__cont
    padding 0 30px

.news__article:hover
    .news__hover
        display flex
        &::after
            display block
    h3
        color blueColor

.amaz
    background url('img/content/amazing/1.png') no-repeat center / cover

.amaz__inner
    padding 300px 0 317px 0

.amaz__header
    color blackColor
    img 
        margin 29px 0

.amaz__row
    display flex

.amaz__col
    padding-right 5%
    flex-basis 50%

.amaz__text
    margin-bottom 68px
    padding-right 22%

.sign__inner
    padding 150px 0 146px 0

.sign__title
    font 32px / 1 baseTitleFont2
    letter-spacing 2px
    text-transform inherit
    text-align center
    color blackColor

.sign__form
    max-width 430px
    margin 67px auto 75px auto
    text-align center

.sign__input
    width 100%
    padding 30px
    font 14px / 30px baseFont2
    text-align center
    color blackColor
    border-bottom 1px solid blackColor
    &::-webkit-input-placeholder
        text-transform uppercase
    &::-moz-placeholder
        text-transform uppercase
    &:-moz-placeholder
        text-transform uppercase
    &:-ms-input-placeholder
        text-transform uppercase

@import 'components/_logo.styl';
@import 'components/_toggle.styl';
@import 'components/_buttons.styl';
@import 'components/_carousel.styl';
@import 'components/_social.styl';

@import 'components/_header.styl'
@import 'components/_nav.styl'
@import 'components/_footer.styl'