*,
*::before
*::after
    box-sizing border-box

.page
    font 14px / 24px baseFont 
    color baseFontColor

.sect
    position relative

.container
    max-width 1172px
    margin 0 auto

.sect__title
    font 100px / 1 mainTitleFont
    text-transform uppercase
    & + p 
        margin-top 16px
        font 33px / 1 subTitleFont

.nb
    font 14px / 24px baseFont2

.visually-hidden
    position absolute
    z-index -$z-index1
    width 0
    height 0
    margin 0
    border none 
    overflow hidden